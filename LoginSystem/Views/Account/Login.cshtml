@model LoginSystem.ViewModels.LoginViewModel

@{
    ViewBag.Title = "User Login";
}
<link href="~/css/Login.css" rel="stylesheet" />
<div id="login">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <h3 class="text-center text-info">Login</h3>
                        <div class="form-group">
                            <label asp-for="Email" class="text-info">Email:</label><br>
                            <input asp-for="Email" id="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="text-info">Password:</label><br>
                            <input asp-for="Password" id="password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RememberMe" class="text-info">
                                <span><input id="remember-me" asp-for="RememberMe"></span>
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label><br>
                            <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                        </div>
                        <div id="register-link" class="text-right">
                            <a href="/Account/Register" class="text-info">Register here</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


